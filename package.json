{
    "name": "phaser-parcel-boilerplate",
    "version": "1.0.0",
    "description": "A boilerplate project for phaser3 and parcel with static assets copied",
    "main": "index.js",
    "repository": "https://github.com/jovancahiles/phaser-parcel-boilerplate",
    "author": "Jovan Jiv Cahiles",
    "license": "MIT",
    "private": false,
    "devDependencies": {
        "parcel-bundler": "^1.12.3",
        "parcel-plugin-static-files-copy": "^2.0.0"
    },
    "dependencies": {
        "phaser": "^3.16.2"
    },
    "scripts": {
        "start": "parcel ./public/index.html --port 8008",
        "build": "parcel build ./public/index.html"
    },
    "staticFiles": {
        "staticPath": "assets",
        "watcherGlob": "**"
    }
}